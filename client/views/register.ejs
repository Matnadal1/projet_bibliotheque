<section class="container">

<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body text-center">
      <h1 class="mb-3">
        <img src="/assets/secure-icon.png" alt="icon" width="20%" />
      </h1>
      <h2>
        Register New User
      </h2>
      <%- include ("./messages") %>
      <form action="/auth/register" method="POST">
        <div class="form-group">
          <label for="nom">Nom</label>
          <input type="nom" id="nom" name="nom" class="form-control" placeholder="Entrez votre Nom"
            value="<%= typeof nom != 'undefined' ? nom : '' %>" />
        </div>
        <div class="form-group">
          <label for="prenom">Prénom</label>
          <input type="prenom" id="prenom" name="prenom" class="form-control" placeholder="Entrez votre Prénom"
            value="<%= typeof prenom != 'undefined' ? prenom : '' %>" />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Entrez votre Email"
            value="<%= typeof email != 'undefined' ? email : '' %>" />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Entrez votre Mot de Passe"
            value="<%= typeof password != 'undefined' ? password : '' %>" />
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirmez le Mot de Passe"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          S'inscrire
        </button>
      </form>
      <p class="mt-4">Déjà inscrit ? <a href="/auth/login">Login</a></p>
    </div>
  </div>
</div>
</section>
